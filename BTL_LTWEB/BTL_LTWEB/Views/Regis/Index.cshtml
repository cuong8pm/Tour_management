
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="TitleRegis">Registration Management Page</h3>
<table class="tableRegis" border="1">
    
    <tr>
        <td>ID Lịch đặt</td>
        <td>Tên Tour</td>
        <td>Người đặt</td>
        <td>SDT</td>
        <td>Hành trình</td>
        <td>Ngày bắt đầu</td>
        <td>Thời gian</td>
        <td>Giá</td>
        <td>Action</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.TOUR.Title</td>
            <td>@item.user.FullName</td>
            <td>@item.user.Phone</td>
            <td>@item.TOUR.Journeys</td>
            <td>@item.TOUR.Start_Day</td>
            <td>@item.TOUR.Times</td>
            <td>@item.TOUR.price</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID })|
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID })|
                @Html.ActionLink("Xoá", "Delete", new { id = item.ID })|
            </td>
        </tr>
    }

</table>

